<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.Controller"
          prefHeight="400.0" prefWidth="600.0">
    <Button text="Click Me" GridPane.columnIndex="0" GridPane.rowIndex="0"
            onAction="#onButtonCLicked"/>
    <Label fx:id="label" text="Clicked 0 times" GridPane.columnIndex="0" GridPane.rowIndex="1" textFill="red"/>
</GridPane>

